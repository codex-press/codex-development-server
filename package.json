{
  "name": "codex-server",
  "version": "0.0.1",
  "description": "Serve JS/CSS from localhost against stories on the Codex Press publishing platform.",
  "homepage": "https://codex.press/docs",
  "repository": "codex-press/development-server",
  "main": "./main.js",
  "scripts": {
    "start": "npm-run-all --parallel watch webpack serve",
    "serve": "sleep 5 && CP_ENV=development nodemon build/server/app.js --watch build/server",
    "webpack": "webpack-dev-server",
    "watch": "babel src/server -w -d build/server",
    "clean": "rm -rf build/*",
    "build": "babel src/server -d build/server && webpack --config webpack.config.production.js",
    "prepublish": "npm-run-all clean build",
    "test": "jest --watch"
  },
  "jest": {
    "setupTestFrameworkScriptFile": "./node_modules/jest-enzyme/lib/index.js"
  },
  "babel": {
    "presets": [
      "es2015",
      "stage-3",
      "react"
    ]
  },
  "bin": {
    "codex": "main.js"
  },
  "author": "Codex Press <developers@codex.press>",
  "license": "MIT",
  "dependencies": {
    "autoprefixer": "^6.5.0",
    "babel-preset-es2015": "^6.14.0",
    "babelify": "^7.3.0",
    "body-parser": "^1.15.1",
    "browserify": "^14.4.0",
    "browserify-incremental": "^3.1.1",
    "chalk": "^1.1.3",
    "chokidar": "^1.5.2",
    "express": "^4.14.0",
    "fs-promise": "^0.5.0",
    "less": "^2.7.1",
    "mkdirp": "^0.5.1",
    "morgan": "^1.8.1",
    "nodemon": "^1.9.2",
    "npm-run-all": "^4.0.2",
    "open": "0.0.5",
    "portfinder": "^1.0.13",
    "postcss": "^5.2.4",
    "pug": "^2.0.0-beta11",
    "selfupdate": "^1.1.0",
    "ws": "^1.1.0",
    "yargs": "^8.0.2"
  },
  "devDependencies": {
    "actioncable": "^5.0.2",
    "babel-cli": "^6.24.1",
    "babel-jest": "^20.0.3",
    "babel-loader": "^7.0.0",
    "babel-preset-react": "^6.23.0",
    "babel-preset-stage-3": "^6.24.1",
    "browser-sync": "^2.18.8",
    "css-loader": "^0.28.4",
    "enzyme": "^2.8.2",
    "gulp": "^3.9.1",
    "gulp-autoprefixer": "^3.1.1",
    "gulp-babel": "^6.1.2",
    "gulp-cached": "^1.1.1",
    "gulp-less": "^3.3.0",
    "gulp-nodemon": "^2.2.1",
    "gulp-rename": "^1.2.2",
    "immutable": "^3.8.1",
    "jest": "^20.0.4",
    "jest-enzyme": "^3.2.0",
    "jest-immutable-matchers": "^1.5.0",
    "less-loader": "^4.0.4",
    "moment": "^2.18.1",
    "react": "^15.5.4",
    "react-dom": "^15.5.4",
    "react-hot-loader": "^3.0.0-beta.7",
    "react-icons": "^2.2.5",
    "react-redux": "^5.0.5",
    "react-test-renderer": "^15.5.4",
    "redux": "^3.6.0",
    "redux-devtools": "^3.4.0",
    "redux-devtools-dock-monitor": "^1.1.2",
    "redux-devtools-log-monitor": "^1.3.0",
    "redux-saga": "^0.15.3",
    "style-loader": "^0.18.2",
    "vinyl-source-stream": "^1.1.0",
    "webpack": "^2.6.1",
    "webpack-dev-server": "^2.4.5"
  }
}
