{
  "name": "codex-server",
  "version": "0.0.3",
  "description": "View articles on the Codex Press publishing platform with assets like Javascript, CSS and SVG files served from localhost.",
  "homepage": "https://codex.press/docs",
  "repository": "codex-press/development-server",
  "main": "./main.js",
  "scripts": {
    "start": "npm-run-all --parallel watch webpack serve",
    "serve": "sleep 10 && NODE_ENV=development nodemon build/server/app.js --watch ./build/server",
    "webpack": "webpack-dev-server",
    "watch": "babel src/server -w -d build/server --ignore **/*.test.js",
    "clean": "rm -rf build/*",
    "build": "npm-run-all clean build-server build-browser",
    "build-server": "babel src/server -d build/server --ignore **/*.test.js",
    "build-browser": "webpack -p --config webpack.config.production.js",
    "test": "jest --watch",
    "test-once": "jest"
  },
  "jest": {
    "setupFiles": [
      "./jest_setup.js"
    ],
    "setupTestFrameworkScriptFile": "./node_modules/jest-enzyme/lib/index.js",
    "moduleNameMapper": {
      "\\.(css|less)$": "<rootDir>/test/__mocks__/styleMock.js"
    }
  },
  "babel": {
    "presets": [
      "env",
      "stage-3",
      "react"
    ]
  },
  "bin": "./main.js",
  "author": "Codex Press <developers@codex.press>",
  "license": "MIT",
  "dependencies": {
    "autoprefixer": "^6.5.0",
    "babel-plugin-transform-es2015-modules-systemjs": "^6.24.1",
    "babel-preset-env": "^1.6.0",
    "body-parser": "^1.15.1",
    "chalk": "^1.1.3",
    "express": "^4.14.0",
    "fs-promise": "^0.5.0",
    "fsevents": "^1.0.12",
    "glob": "^7.1.2",
    "less": "^2.7.1",
    "less-plugin-autoprefix": "^1.5.1",
    "micromatch": "^3.0.4",
    "mkdirp": "^0.5.1",
    "node-cache": "^4.1.1",
    "nodemon": "^1.9.2",
    "npm-run-all": "^4.0.2",
    "open": "0.0.5",
    "pad": "^1.1.0",
    "portfinder": "^1.0.13",
    "postcss": "^5.2.4",
    "pug": "^2.0.0-beta11",
    "sane": "^2.0.0",
    "selfupdate": "^1.1.0",
    "terminal-table-output": "^1.3.2",
    "ua-parser-js": "^0.7.13",
    "ws": "^1.1.0",
    "yargs": "^8.0.2"
  },
  "devDependencies": {
    "actioncable": "^5.0.2",
    "babel-cli": "^6.24.1",
    "babel-jest": "^20.0.3",
    "babel-loader": "^7.0.0",
    "babel-preset-react": "^6.23.0",
    "babel-preset-stage-3": "^6.24.1",
    "cheerio": "^1.0.0-rc.2",
    "css-loader": "^0.28.4",
    "enzyme": "^2.8.2",
    "immutable": "^3.8.1",
    "jest": "^20.0.4",
    "jest-enzyme": "^3.2.0",
    "jest-immutable-matchers": "^1.5.0",
    "less-loader": "^4.0.4",
    "moment": "^2.18.1",
    "nock": "^9.0.14",
    "postcss-loader": "^2.0.6",
    "prop-types": "^15.5.10",
    "react": "^15.5.4",
    "react-dom": "^15.5.4",
    "react-hot-loader": "^3.0.0-beta.7",
    "react-icons": "^2.2.5",
    "react-redux": "^5.0.5",
    "react-select": "^1.0.0-rc.5",
    "react-test-renderer": "^15.5.4",
    "redux": "^3.6.0",
    "redux-devtools": "^3.4.0",
    "redux-devtools-dock-monitor": "^1.1.2",
    "redux-devtools-log-monitor": "^1.3.0",
    "redux-immutable": "^4.0.0",
    "redux-thunk": "^2.2.0",
    "style-loader": "^0.18.2",
    "supertest": "^3.0.0",
    "touch": "^3.1.0",
    "webpack": "^2.6.1",
    "webpack-dev-server": "^2.4.5"
  }
}
